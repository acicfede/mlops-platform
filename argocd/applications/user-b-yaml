  name: mlops-user-b
  namespace: openshift-gitops
spec:
  project: default
  source:
    repoURL: https://github.com/acicfede/mlops-platform.git
    targetRevision: main
    path: profiles/user-b
  destination:
    server: https://kubernetes.default.svc
    namespace: mlops-user-b
  syncPolicy:
    automated:
      prune: true
      selfHeal: true
